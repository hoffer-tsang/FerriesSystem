@model Ferry.ViewModel.EmployeeFerryAddEditViewModel
@{
    ViewBag.Title = "AddEditFerry";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

@if (Model.FerryId == -1)
{
    <h1> Add Ferry </h1>
}
else
{
    <h1> Edit Ferry </h1>
}
@if (Model.StandardError != null && Model.StandardError == 1)
{
    <div>
        An error occur. Please try again.
    </div>
}
@if (Model.ConcurrencyError != null && Model.ConcurrencyError == 1)
{
    <div>
        Concurrency Error has occured. Please reload the data again in Ferry page.
    </div>
}
@using (Html.BeginForm("UpdateFerry", "Employee"))
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="row mt-3">
        <div class="col-2">
            @Html.LabelFor(model => model.FerryName, new {@class = "text-right"})
        </div>
        <div class="col">
            @Html.EditorFor(model => model.FerryName, new { htmlAttributes = new { @type = "search", @class = "form-control rounded", @placeholder = "Ferry Name" } })
            @Html.ValidationMessageFor(modelItem => modelItem.FerryName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2">
            @Html.LabelFor(model => model.CompanyId, new { @class = "text-right" })
        </div>
        <div class="col">
            @Html.DropDownListFor(model => model.CompanyId, new SelectList(Model.CompanyList, "CompanyId", "CompanyName", Model.CompanyId), new { @class = "form-control" })
            @Html.ValidationMessageFor(modelItem => modelItem.CompanyId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <div class="mt-3">
            <button type="button" class="btn btn-outline-primary">
                @Html.ActionLink("cancel", "Ferry", "Employee")
            </button>
            @if (Model.FerryId == -1)
            {
                <button type="submit" class="btn btn-outline-primary">
                    Add Ferry
                </button>
            }
            else
            {
                <button type="submit" class="btn btn-outline-primary">
                    Edit Ferry
                </button>
            }
        </div>
    </div>
</div>
    <div>
        @Html.HiddenFor(model => model.FerryId)
    </div>
    <div>
        @Html.HiddenFor(model => model.RowVersion)
    </div>
}

