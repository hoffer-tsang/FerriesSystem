@model Ferry.ViewModel.EmployeeFerryDetailViewModel
@{
    ViewBag.Title = "FerryDetails";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<h2>@Model.FerryName Details</h2>
<h5 class="mt-3"> Company Name: @Model.CompanyName </h5>

@if (Model.GeneralError != null && Model.GeneralError == 1)
{
    <div> An Error Occur, please try again.</div>
}
@using (Html.BeginForm("SearchSchedule", "Employee"))
{
    <div>
        @Html.AntiForgeryToken()
        <div class="mt-3">
            @Html.LabelFor(model => model.DepartureDay)
            @Html.DropDownListFor(model => model.DepartureDay, new SelectList(Model.DayList, "DayNumber", "DayName", null), new { @class = "form-control" })
            @Html.ValidationMessageFor(modelItem => modelItem.DepartureDay, "", new { @class = "text-danger" })
        </div>
        <div >
            @Html.LabelFor(model => model.DepartureLocationId)
            @Html.DropDownListFor(model => model.DepartureLocationId, new SelectList(Model.LocationList, "LocationId", "LocationName", null), new { @class = "form-control" })
            @Html.ValidationMessageFor(modelItem => modelItem.DepartureLocationId, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.ArrivalDay)
            @Html.DropDownListFor(model => model.ArrivalDay, new SelectList(Model.DayList, "DayNumber", "DayName", null), new { @class = "form-control" })
            @Html.ValidationMessageFor(modelItem => modelItem.DepartureDay, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.ArrivalLocationId)
            @Html.DropDownListFor(model => model.ArrivalLocationId, new SelectList(Model.LocationList, "LocationId", "LocationName", null), new { @class = "form-control" })
            @Html.ValidationMessageFor(modelItem => modelItem.ArrivalLocationId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-outline-primary">
            <i class="fas fa-search"></i>
        </button>
    </div>
    <div>
        @Html.HiddenFor(model => model.FerryId)
    </div>
}
<button type="button" class="btn btn-light mt-3">@Html.ActionLink("New Schedule", "NewScheduleDetail", "Employee", new { ferryId = Model.FerryId }, null)</button>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Departure Location  @Html.ActionLink(" ", "SortSchedule", "Employee", new { sortColumn = "DepartureLocation", lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation }, new { @class = "fa fa-fw fa-sort" })</th>
            <th scope="col">Departure Day @Html.ActionLink(" ", "SortSchedule", "Employee", new { sortColumn = "DepartureDay", lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation }, new { @class = "fa fa-fw fa-sort" })</th>
            <th scope="col">Arrival Location  @Html.ActionLink(" ", "SortSchedule", "Employee", new { sortColumn = "ArrivalLocation", lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation }, new { @class = "fa fa-fw fa-sort" })</th>
            <th scope="col">Arrival Day @Html.ActionLink(" ", "SortSchedule", "Employee", new { sortColumn = "ArrivalDay", lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation }, new { @class = "fa fa-fw fa-sort" })</th>
            <th scope="col">Details</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ScheduleList.Count; i++)
        {
            <tr>
                <td>@Model.ScheduleList[i].DepartureLocation</td>
                <td>@Model.ScheduleList[i].DepartureDay</td>
                <td>@Model.ScheduleList[i].ArrivalLocation</td>
                <td>@Model.ScheduleList[i].ArrivalDay</td>
                <td>@Html.ActionLink("Details", "DetailSchedule", "Employee", new { id = Model.ScheduleList[i].ScheduleId, ferryId = Model.FerryId }, null)</td>
                <td>@Html.ActionLink("Edit", "EditScheduleDetail", "Employee", new { id = Model.ScheduleList[i].ScheduleId, ferryId = Model.FerryId }, null)</td>
                <td>
                    <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="hiddenCompanyId(@Model.ScheduleList[i].ScheduleId)">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">@Html.ActionLink("First", "PageSchedule", "Employee", new { lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation, pageNumber = 1 }, new { @class = "page-link" })</li>
            <li class="page-item">@Html.ActionLink("Previous", "PageSchedule", "Employee", new { lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation, pageNumber = ViewBag.CurrentPage - 1 }, new { @class = "page-link" })</li>
        }
        @foreach (var item in Model.PageList)
        {
            <li class="page-item">@Html.ActionLink(item.ToString(), "PageSchedule", "Employee", new { lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation, pageNumber = item }, new { @class = "page-link" })</li>
        }
        @if (ViewBag.CurrentPage < ViewBag.MaxPageNumber)
        {
            <li class="page-item">@Html.ActionLink("Next", "PageSchedule", "Employee", new { lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation, pageNumber = ViewBag.CurrentPage + 1 }, new { @class = "page-link" })</li>
            <li class="page-item">@Html.ActionLink("Last", "PageSchedule", "Employee", new { lastSortColumn = ViewBag.SortColumn, sortOrder = ViewBag.SortOrder, ferryId = Model.FerryId, departureDay = ViewBag.SearchDepartureDay, departureLocationId = ViewBag.SearchDepartureLocation, arrivalDay = ViewBag.SearchArrivalDay, arrivalLocationId = ViewBag.SearchArrivalLocation, pageNumber = ViewBag.MaxPageNumber }, new { @class = "page-link" })</li>
        }
    </ul>
</nav>

<!-- Modal -->
@using (Html.BeginForm("DeleteSchedule", "Employee"))
{
    @Html.AntiForgeryToken()
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Delete Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <i class="fa-sharp fa-solid fa-xmark"></i>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the Schedule?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
                <div>
                    @Html.HiddenFor(model => model.HiddenScheduleId, new { @id = "HiddenScheduleId" })
                </div>
                <div>
                    @Html.HiddenFor(model => model.FerryId)
                </div>
            </div>
        </div>
    </div>
}

<script>
    function hiddenCompanyId(id) {
        document.getElementById("HiddenScheduleId").value = id;
    }
</script>

