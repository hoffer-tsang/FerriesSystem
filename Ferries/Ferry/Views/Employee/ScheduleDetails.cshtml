@model Ferry.ViewModel.EmployeeScheduleDetailViewModel
@{
    ViewBag.Title = "Schedule Details";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>@Model.FerryName Schedule Details</h2>
@if (Model.GeneralError != null && Model.GeneralError == 1)
{
    <div> An Error Occur, please try again.</div>
}

<div class="mt-3">
    @Html.LabelFor(model => model.CostPerPerson)
    @Html.DisplayFor(model => model.CostPerPerson)
</div>
<div>
    @Html.LabelFor(model => model.CostPerVehicle)
    @Html.DisplayFor(model => model.CostPerVehicle)
</div>
@if (Model.Description != null)
{
    <div>
        @Html.LabelFor(model => model.Description)
        @Html.DisplayFor(model => model.Description)
    </div>
}

<div class="mt-3">
    <button type="button" class="btn btn-Primary"> @Html.ActionLink("Edit Schedule", "EditScheduleDetail", "Employee", new { id = Model.ScheduleId, ferryId = Model.FerryId }, null) </button>
</div>

<h4 class="mt-3"> First Stop</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Location</th>
            <th scope="col">DepartureDay</th>
            <th scope="col">DepartureTime</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.FirstStop.Location)</td>
            <td>@Html.DisplayFor(model => model.FirstStop.DepartureDayName)</td>
            <td>@Html.DisplayFor(model => model.FirstStop.DepartureTime)</td>
        </tr>
    </tbody>
</table>
@if (Model.StopList != null || Model.StopList.Count != 0)
{
    <h4 class="mt-3"> Mid Stops </h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Location</th>
                <th scope="col">ArrivalDay</th>
                <th scope="col">ArrivalTime</th>
                <th scope="col">DepartureDay</th>
                <th scope="col">DepartureTime</th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.StopList.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(model => model.StopList[i].Location)</td>
                    <td>@Html.DisplayFor(model => model.StopList[i].ArrivalDayName)</td>
                    <td>@Html.DisplayFor(model => model.StopList[i].ArrivalTime)</td>
                    <td>@Html.DisplayFor(model => model.StopList[i].DepartureDayName)</td>
                    <td>@Html.DisplayFor(model => model.StopList[i].DepartureTime)</td>
                </tr>
            }
        </tbody>
    </table>
}

<h4 class="mt-3"> last Stop</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Location</th>
            <th scope="col">ArrivalDay</th>
            <th scope="col">ArrivalTime</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.LastStop.Location)</td>
            <td>@Html.DisplayFor(model => model.LastStop.ArrivalDayName)</td>
            <td>@Html.DisplayFor(model => model.LastStop.ArrivalTime)</td>
        </tr>
    </tbody>
</table>

<button type="button" class="btn btn-outline-primary mt-3">@Html.ActionLink("Back", "FerryDetails", "Employee", new { id = Model.FerryId }, null)</button>


